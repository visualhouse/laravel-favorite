{
    "name": "visualhouse/laravel-favorite",
    "type": "library",
    "description": "Allows Laravel Eloquent models to implement a 'favorite' or 'remember' or 'follow' feature.",
    "keywords": [
        "Manzadey",
        "ChristianKuri",
        "laravel-favorite",
        "laravel",
        "follow",
        "package",
        "favorite",
        "favourite",
        "favoritable",
        "remember"
    ],
    "homepage": "https://github.com/visualhouse/laravel-favorite",
    "license": "MIT",
    "authors": [
        {
            "name": "Nicolas Gominet",
            "email": "nicolas.gominet@visualhouse.co",
            "role": "Developer"
        },
        {
            "name": "Andrey Manzadey",
            "email": "andrey.manzadey@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Christian Kuri",
            "email": "christian.kuri.martinez@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "^8.0|^9.0|^10.0",
        "illuminate/database": "^8.0|^9.0|^10.0",
        "php": "^8.0|^8.1|^8.2"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.5.10"
    },
    "autoload": {
        "psr-4": {
            "Visualhouse\\LaravelFavorite\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Visualhouse\\LaravelFavorite\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Visualhouse\\LaravelFavorite\\FavoriteServiceProvider"
            ]
        },
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    }
}